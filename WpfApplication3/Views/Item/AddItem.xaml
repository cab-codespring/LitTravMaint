<Window x:Class="LitTravProj.Views.Item.AddItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="addItemDialog"
        Title="AddItem" Height="700" Width="606">
    
    <Grid DataContext="{Binding ElementName=addItemDialog}">
        <Label Content="Add a new Item To The Database" Height="28" HorizontalAlignment="Left" Margin="44,27,0,0" Name="lableTitle" VerticalAlignment="Top" Width="328" FontWeight="Bold" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="121,85,0,0" Name="textBox1" VerticalAlignment="Top" Width="251" />
        <Label Content="SKU:" Height="28" HorizontalAlignment="Left" Margin="12,85,0,0" Name="label1" VerticalAlignment="Top" Width="64" />
        <Label Content="Season ID:" Height="28" HorizontalAlignment="Left" Margin="11,130,0,0" Name="label2" VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="121,130,0,0" Name="seasonIDComBox" VerticalAlignment="Top" Width="251"
                  ItemsSource="{Binding Path=Seasons}" DisplayMemberPath="Seasons">
            
        </ComboBox>
    </Grid>
</Window>
